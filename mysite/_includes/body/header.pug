header
  .title
    a(href='/')
      .logo #{site.title}
    != func.svgData.mapList.get(`${func.svgData.path}/menu_button.svg`)
  .menu
    each item in menu.main
      //- PageSectionと同じでなければselectedは付与しない
      a(href=`${item.url}`)
        .navi(class=`${pageSection==item.name?'selected':''}`) #{(item.short || item.name).toUpperCase()}
  .background
.fillScreen.exit.menuExit
